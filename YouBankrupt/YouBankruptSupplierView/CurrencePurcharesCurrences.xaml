<Window x:Class="YouBankruptSupplierView.CurrencePurcharesCurrences"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YouBankruptSupplierView"
        mc:Ignorable="d"
        Title="CurrencePurcharesCurrences" Height="450" Width="800">
    <Grid Margin="0,0,21,-24">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Название валюты: " Grid.Column="1" Margin="34,0,0,0" HorizontalAlignment="Left" FontSize="16" VerticalAlignment="Center" Height="30" Width="200"/>
        <ComboBox Name="NameCurrenceComboBox" Grid.Column="2" Grid.Row="0" Margin="5" BorderBrush="Black" BorderThickness="2"/>
        <Button Name="btnAdd" Grid.Column="0" Grid.Row="1" Margin="6,8,4,3" Content="Добавить" FontSize="16" Click="ButtonSave_Click" Grid.ColumnSpan="2" />
        <Button  Name="btnCancel" Grid.Column="2" Grid.Row="1" Margin="3,8,7,3" Content="Отмена" FontSize="16" Click="ButtonCancel_Click"  />

    </Grid>
</Window>