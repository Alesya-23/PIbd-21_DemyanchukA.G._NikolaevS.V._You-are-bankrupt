<Window x:Class="YouBankruptSupplierView.WindowAddCurrence"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YouBankruptSupplierView"
        mc:Ignorable="d"
        Title="WindowAddCurrence" Height="250" Width="450" Loaded="WindowBindingCurrence_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.6*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Валюта"  Grid.Row="0" Grid.Column="0"/>
        <ComboBox x:Name="ComboBoxCurrences" Grid.Row="0" Grid.Column="1" SelectedIndex="0" >
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding CurrenceName}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button x:Name="ButtonSave" Content="Сохранить" Grid.Row="1" Grid.Column="0" Click="ButtonSave_Click"/>
        <Button x:Name="ButtonCancel" Content="Отмена" Grid.Row="1" Grid.Column="1" Click="ButtonCancel_Click"/>

    </Grid>
</Window>