<Window x:Class="YouBankruptProviderView.FormPayments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="FormPayment" Height="450" Width="800" Loaded="FormPayments_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="531*"/>
            <ColumnDefinition Width="269*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dataGrid" Margin="10,10,200,10" Grid.ColumnSpan="2">
        </DataGrid>
        <Button x:Name="btnAdd" Content="Добавить" Margin="74,10,0,0" VerticalAlignment="Top" Height="87" HorizontalAlignment="Left" Width="185" Click="btnAdd_Click" Grid.Column="1"/>
        <Button x:Name="btnDel" Content="Удалить" HorizontalAlignment="Left" Margin="74,118,0,0" VerticalAlignment="Top" Height="87" Width="185" Grid.Column="1" Click="btnDel_Click"/>
        <Button x:Name="btnUpd" Content="Изменить" HorizontalAlignment="Left" Margin="74,228,0,0" VerticalAlignment="Top" Height="87" Width="185" Grid.Column="1"/>
        <Button x:Name="btnRef" Content="Обновить" HorizontalAlignment="Left" Margin="74,336,0,0" VerticalAlignment="Top" Height="87" Width="185" Grid.Column="1"/>
    </Grid>
</Window>
