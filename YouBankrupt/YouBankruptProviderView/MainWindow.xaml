<Window x:Class="YouBankruptCustomerView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YouBankruptCustomerView"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem x:Name="TransactionWithCustomerItem" Header="Сделки с заказчиком" Click="TransactionWithCustomerItem_Click"></MenuItem>
            <MenuItem x:Name="PaymentItem" Header="Выплаты по сделкам" Click="PaymentItem_Click"></MenuItem>
            <MenuItem x:Name="CreditingItem" Header="Зачисления" Click="CreditingItem_Click"></MenuItem>
            <MenuItem x:Name="ListItem" Header="Список" Click="ListItem_Click"></MenuItem>
            <MenuItem x:Name="Report" Header="Отчеты" Click="Report_Click"></MenuItem>
        </Menu>
    </Grid>
</Window>
