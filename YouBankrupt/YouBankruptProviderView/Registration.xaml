        <Button Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="8,149,0,0" VerticalAlignment="Top" Width="158" Click="Button_Click_Registration"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="8,177,0,0" VerticalAlignment="Top" Width="158" Click="Button_Click_Cansel"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,17,0,0" Text="Регистрация заказчика" TextWrapping="Wrap" VerticalAlignment="Top" Width="138"/>
        <TextBox HorizontalAlignment="Left" Margin="8,120,0,0" Text="Подтвердить пароль" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" Height="21"/>

    </Grid>
</Window>
