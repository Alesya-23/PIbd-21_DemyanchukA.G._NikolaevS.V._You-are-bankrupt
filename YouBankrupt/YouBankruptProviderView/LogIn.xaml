<Window x:Class="YouBankruptCustomerView.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YouBankruptCustomerView"
        mc:Ignorable="d"
        Title="Авторизация заказчика" Height="200" Width="200">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="8,46,0,0" Text="ФИО" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" Height="21"/>
        <TextBox HorizontalAlignment="Left" Margin="8,0,0,0" Text="Пароль" TextWrapping="Wrap" VerticalAlignment="Center" Width="158" Height="21"/>
        <Button Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="8,136,0,0" VerticalAlignment="Top" Width="158" Click="Button_Click_Registration"/>
        <Button Content="Войти" HorizontalAlignment="Left" Margin="8,108,0,0" VerticalAlignment="Top" Width="158" Click="Button_Click_LogIn"/>
        <TextBlock HorizontalAlignment="Left" Margin="3,17,0,0" Text="Авторизация заказчика" TextWrapping="Wrap" VerticalAlignment="Top" Width="138"/>

    </Grid>
</Window>
