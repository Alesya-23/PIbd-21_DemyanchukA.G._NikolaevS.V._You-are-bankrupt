        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="FormPayment" Height="136" Width="166" Loaded="FormPayment_Loaded">
    <Grid>
        <TextBox x:Name="textBoxSum" HorizontalAlignment="Center" Margin="0,10,0,0" Text="Введите сумму" TextWrapping="Wrap" VerticalAlignment="Top" Width="124"/>
        <Button   Content="Сохранить" HorizontalAlignment="Left" Margin="10,76,0,0" VerticalAlignment="Top" Width="60" Click="btnSave_Click"/>
        <Button Content="Отменить" HorizontalAlignment="Left" Margin="76,76,0,0" VerticalAlignment="Top" Width="58"/>
        <DatePicker x:Name="pickDate" HorizontalAlignment="Center" VerticalAlignment="Top" Width="124" Margin="0,41,0,0"/>

    </Grid>
</Window>
